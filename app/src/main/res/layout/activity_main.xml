<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPCOMING ACTIVITIES"
        android:textSize="19dp"
        android:paddingTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paskuhan"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/Activities"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/checkBox2"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recollection at Calaruega"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox"
        app:layout_constraintBottom_toTopOf="@id/checkBox3"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming Competition"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox2"
        app:layout_constraintBottom_toTopOf="@id/checkBox4"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coastal Cleanup at Roxas Blvd."
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox3"
        app:layout_constraintBottom_toTopOf="@id/checkBox5"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seminar on Kotlin"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox4"
        app:layout_constraintBottom_toTopOf="@id/checkBox6"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Building"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox5"
        app:layout_constraintBottom_toTopOf="@id/checkBox7"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field Trip at South Luzon"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox6"
        app:layout_constraintBottom_toTopOf="@id/checkBox8"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training on Web Technologies"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox7"
        app:layout_constraintBottom_toTopOf="@id/Comment"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Comment"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Comments"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox8"
        app:layout_constraintBottom_toTopOf="@id/editText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/back"
        app:layout_constraintTop_toBottomOf="@id/Comment"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="writeData"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintRight_toLeftOf="@id/button2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="nextCheck"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>